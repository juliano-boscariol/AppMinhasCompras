<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMinhasCompras.Views.EditarProduto"
             xmlns:local="clr-namespace:AppMinhasCompras.Models"
             Title="{Binding Descricao}"> <!-- O nome do produto a
    a ser editado já apaarecerá aqui-->

    <!-- Na Agenda 05, criamos a página de Edição do Produto. Ao clicar no produto, o 
    usuário será encaminhado para cá e, através do Binding Context, serão exibidos os dados do produto selecionado -->
    
    
    <ContentPage.ToolbarItems>
            <ToolbarItem Text="Salvar" Clicked="Clicked_Salvar"/>
        </ContentPage.ToolbarItems>

        <VerticalStackLayout Spacing="10" Padding="10">
            <Label Text="Descrição do Produto"/>
            <Entry x:Name="txt_descricao" Text="{Binding Descricao}"/>

            <Label Text="Categoria"/>
            <Picker x:Name="picker_categoria"
            SelectedItem="{Binding Categoria}"
            ItemsSource="{x:Static local:Categorias.Lista_categorias}"/>

            <Label Text="Quantidade"/>
            <Entry x:Name="txt_quantidade" Text="{Binding Quantidade}" Keyboard="Numeric"/>
            <Label Text="Preço unitário"/>
            
            <Entry x:Name="txt_preco" Text="{Binding Preco}" Keyboard="Numeric"/>
        </VerticalStackLayout>
</ContentPage>